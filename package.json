{
  "name": "mayonation",
  "version": "1.0.0",
  "description": "A lightweight and performant animation library for the web",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js",
      "types": "./dist/index.d.ts"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "jest",
    "test:watch": "jest --watch",
    "serve": "vite"
  },
  "devDependencies": {
    "@types/jest": "^29.5.14",
    "concurrently": "^8.2.2",
    "jest": "^29.7.0",
    "rimraf": "^5.0.10",
    "ts-jest": "^29.2.5",
    "tsup": "^8.3.5",
    "typescript": "^4.9.0",
    "vite": "^5.4.11"
  },
  "keywords": [
    "animation",
    "typescript",
    "web-animation"
  ],
  "author": "Utkarsh Priyadarshi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/utkarsh5026/mayonation.git"
  },
  "bugs": {
    "url": "https://github.com/utkarsh5026/mayonation/issues"
  },
  "homepage": "https://github.com/utkarsh5026/mayonation#readme"
}
