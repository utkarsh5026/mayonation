{
  "name": "mayonation",
  "version": "1.0.0",
  "description": "A lightweight and performant animation library for the web",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "npm run clean && npm run build:types && npm run build:bundle",
    "build:types": "tsc --declaration --emitDeclarationOnly --outDir dist",
    "build:bundle": "vite build",
    "dev": "concurrently \"npm run dev:types\" \"npm run dev:bundle\"",
    "dev:types": "tsc --declaration --emitDeclarationOnly --outDir dist --watch",
    "dev:bundle": "vite build --watch",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run build",
    "show": "vite"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "rimraf": "^5.0.10",
    "typescript": "^4.9.0",
    "vite": "^4.0.0"
  }
}
