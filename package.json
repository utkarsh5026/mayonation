{
  "name": "mayonation",
  "version": "1.0.0",
  "description": "A lightweight and performant animation library for the web",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "sideEffects": false,
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./core": {
      "types": "./dist/core.d.ts",
      "import": "./dist/core.mjs",
      "require": "./dist/core.js"
    },
    "./animations": {
      "types": "./dist/animations.d.ts", 
      "import": "./dist/animations.mjs",
      "require": "./dist/animations.js"
    },
    "./timeline": {
      "types": "./dist/timeline.d.ts",
      "import": "./dist/timeline.mjs",
      "require": "./dist/timeline.js"
    },
    "./utils": {
      "types": "./dist/utils.d.ts",
      "import": "./dist/utils.mjs",
      "require": "./dist/utils.js"
    }
  },
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsup && node scripts/build-info.js",
    "build:only": "tsup",
    "build:analyze": "npm run build:only && node scripts/bundle-analyzer.js",
    "dev": "tsup src/index.ts --format cjs,esm --dts --watch",
    "clean": "rimraf dist",
    "prepublishOnly": "npm run clean && npm run build",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "serve": "vite",
    "benchmark": "node benchmarks/animation-benchmarks.js run",
    "benchmark:single": "node benchmarks/animation-benchmarks.js single",
    "benchmark:profile": "node benchmarks/animation-benchmarks.js profile",
    "benchmark:compare": "node benchmarks/library-comparison.js",
    "benchmark:report": "node benchmarks/reporter.js html"
  },
  "devDependencies": {
    "@testing-library/dom": "^10.4.0",
    "@types/jsdom": "^21.1.7",
    "concurrently": "^8.2.2",
    "esbuild-visualizer": "^0.7.0",
    "happy-dom": "^16.6.0",
    "jsdom": "^26.0.0",
    "rimraf": "^5.0.10",
    "source-map-explorer": "^2.5.3",
    "tsup": "^8.3.5",
    "typescript": "^4.9.0",
    "vite": "^5.4.11",
    "vitest": "^2.1.8"
  },
  "keywords": [
    "animation",
    "typescript",
    "web-animation"
  ],
  "author": "Utkarsh Priyadarshi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/utkarsh5026/mayonation.git"
  },
  "bugs": {
    "url": "https://github.com/utkarsh5026/mayonation/issues"
  },
  "homepage": "https://github.com/utkarsh5026/mayonation#readme"
}
