{
  "name": "mayonation",
  "version": "1.0.0",
  "description": "A lightweight and performant animation library for the web",
  "main": "dist/animation-library.umd.js",
  "module": "dist/animation-library.mjs",
  "types": "dist/index.d.ts",
  "files": [
    "dist"
  ],
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "test": "jest",
    "preview": "vite preview",
    "prepublishOnly": "npm run build",
    "lint": "eslint src --ext .ts,.tsx",
    "format": "prettier --write \"src/**/*.{ts,tsx}\""
  },
  "keywords": [
    "animation",
    "web-animation",
    "transform",
    "css-animation",
    "javascript",
    "typescript"
  ],
  "author": "Utkarsh Priyadarshi",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/utkarsh502/mayonation"
  },
  "homepage": "https://github.com/utkarsh502/mayonation#readme",
  "bugs": {
    "url": "https://github.com/utkarsh502/mayonation/issues"
  },
  "devDependencies": {
    "@types/node": "^18.0.0",
    "typescript": "^4.9.0",
    "vite": "^4.0.0",
    "jest": "^29.0.0",
    "@types/jest": "^29.0.0",
    "ts-jest": "^29.0.0",
    "eslint": "^8.0.0",
    "prettier": "^2.8.0"
  }
}
